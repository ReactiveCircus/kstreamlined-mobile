{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "groupName": "Kotlin, KSP",
            "matchPackagePrefixes": [
                "org.jetbrains.kotlin",
                "com.google.devtools.ksp",
            ]
        },
        {
            "groupName": "Firebase",
            "matchPackagePrefixes": [
                "com.google.firebase",
            ]
        },
        {
            "groupName": "AndroidX",
            "matchPackagePrefixes": [
                "androidx",
            ]
        },
    ],
}
